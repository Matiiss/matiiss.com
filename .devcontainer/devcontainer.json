{
    "name": "Dev Container",
    "dockerComposeFile": ["../docker-compose-flask.yaml", "docker-compose.extend.yaml"],
    "service": "flask",
    "remoteUser": "user",
    "containerUser": "user",
    "workspaceFolder": "/app",
    "shutdownAction": "stopCompose",

    "postCreateCommand": {
        "create-venv": "cd ./flask && uv sync --all-extras --dev"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "./flask/.venv/bin/python"
            }
        }
    }
}